// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  userId String @id @map("id")
  password String @default("$2a$10$OMP7ry3jH1NGAbMTO3x17OkZAe40S6nBbuR.9R.ZKV9r2VdVpgQ9K") // password

  firstName String
  lastName String
  email String @unique
  position String
  salary Int

  shop Shop @relation(fields: [shopId], references: [shopId])
  shopId String

  session Session?

  @@map("users")
}

model Shop {
  shopId String @id @map("id")
  name String @unique
  address String @unique
  state String
  email String @unique
  phoneNumbers String @unique

  staff User[]

  @@map("shops")
}

model Session {
  sessionId String @id @default(uuid()) @map("id")
  sessionExpires BigInt

  user User @relation(fields: [userId], references: [userId])
  userId String @unique

  @@map("sessions")
}
