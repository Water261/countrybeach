// learn more about it in the docs: https://pris.ly/d/prisma-schema

// TODO: Use relations in Users & Shops

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id String @id
  password String
  currentSessions Sessions?

  // Personal Info
  firstName String
  lastName String

  // Company Info
  position String
  email String
  salary Int
  shop Shop @relation(fields: [shopId], references: [id])
  shopId String
}

model Shop {
  id String @id
  name String
  address String
  state String
  email String
  phoneNos String // Comma separated string of phone numbers
  users User[]
}

model Sessions {
  id String @id
  sessionUser User @relation(fields: [sessionFor], references: [id])
  sessionFor String @unique
  sessionExpires BigInt
}
